@page "/"
@inherits DrugsBase

@if (Drugs == null)
{
    <h3>Loading drugs...</h3>
}
else
{
    <h3 class="mb-5">Drugs</h3>

    var drugCount = Drugs.Count();

    @if (drugCount > 0)
    {

        @foreach (var drugGroup in GetGroupedDrugsByCategory())
        {
            <h4>@GetCategoryName(drugGroup)</h4>

            <div class="row mt-3">
                <DisplayDrugs Drugs="@drugGroup.Take(4)"></DisplayDrugs>
            </div>
            <hr class="mb-3"/>
        }
    }

}